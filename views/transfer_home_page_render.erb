<body <% if request.path == '/' %>class="home"<%end%>>
<!-- Preloader -->
<div class="preloader">
  <div id="followingBallsG">
    <div id="followingBallsG_1" class="followingBallsG"></div>
    <div id="followingBallsG_2" class="followingBallsG"></div>
    <div id="followingBallsG_3" class="followingBallsG"></div>
    <div id="followingBallsG_4" class="followingBallsG"></div>
  </div>
</div>
<!-- //Preloader -->

<!-- Header -->
<header class="header" role="banner">
  <div class="wrap">
    <!-- Logo -->
    <div class="logo">
      <a href="<%=format_url_with_language('/')%>"><img src="<%=site_logo%>" alt="<%=site_title%>" style="height:80px"/></a>
    </div>
    <!-- //Logo -->

    <!-- Main Nav -->
    <nav role="navigation" class="main-nav">
      <ul>
        <li class="active"><a href="/" title="">Inicio</a></li>
        <li><a href="/condiciones" title="Condiciones de alquiler">Condiciones</a></li>
        <li><a href="/contacto" title="Contacto">Contacto</a></li>
      </ul>
    </nav>
    <!-- //Main Nav -->
  </div>
</header>
<!-- //Header -->

<!-- Main -->
<main class="main" role="main">
  <!-- Intro -->
  <div class="intro">
    <div class="wrap">
      <div class="textwidget">
        <h1 class="wow fadeInDown">¿Necesita un coche de alquiler?</h1>
        <h2 class="wow fadeInUp"Está en el lugar correcto.</h2>
        <div class="actions">
          <a href="#services" title="Our services" class="btn large white wow fadeInLeft anchor">Servicios</a>
          <a href="#booking" title="Make a booking" class="btn large color wow fadeInRight anchor">Reservar</a>
        </div>
      </div>
    </div>
  </div>
  <!-- //Intro -->

  <!-- PAGE : Booking selector -->
  <% if (page.variables.has_key?(:booking_selector) and not page.variables[:booking_selector].empty?) %>
      <%= page.variables[:booking_selector] %>
  <% end %>

  <!-- The content in the layout -->
  <%= page.content %>
  <!-- //The content in the layout -->

</main>
<!-- //Main -->

<!-- Footer -->
<%= partial :footer %>
<!-- //Footer -->

<!-- JS Page Level -->
<script src="/transfer/js/theme.js"></script>
<% if !page.scripts_source.nil? && !page.scripts_source.empty? %>
    <%= page.scripts_source %>
<% end %>
</body>
</html>






