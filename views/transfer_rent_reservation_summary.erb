<!-- Page info -->
<header class="site-title color">
  <div class="wrap">
    <div class="container">
      <h1 id="reservation_title"></h1>
    </div>
  </div>
</header>
<!-- //Page info -->

<div class="wrap">
  <div class="row">
    <div class="three-fourth">
      <form class="box readonly">

        <div id="customer_data" class="readonly">
        </div>

        <div id="selected_product" class="readonly">
        </div>

        <div id="selected_extras" class="readonly">
        </div>

        <div id="reservation_detail" class="readonly">
        </div>

      </form>
    </div>

    <!--- Sidebar -->
    <aside class="one-fourth sidebar right">
      <!-- Widget -->
      <div class="widget">
        <h4>Need help booking?</h4>
        <div class="textwidget">
          <p>Call our customer services team on the number below to speak to one of our advisors who will help you with all of your needs.</p>
          <p class="contact-data"><span class="icon icon-themeenergy_call black"></span> +1 555 555 555</p>
        </div>
      </div>
      <!-- //Widget -->

    </aside>
    <!--- //Sidebar -->
  </div>
</div>

<script type="text/tpml" id="script_product_detail">
<h3>Producto contratado</h3>
        <div class="f-row">
          <div class="one-fourth">Nombre</div>
          <div class="three-fourth"><%%=product.name%></div>
        </div>
</script>

<script type="text/template" id="script_extras_detail">
  <h3>Extras</h3>
  <%% for (var idx=0;idx<booking.booking_extras.length;idx++) { %>
  <div class="f-row">
    <div class="one-fourth">Nombre</div>
    <div class="three-fourth"><%%=booking.booking_extras[idx].extra_description%> (<%%=booking.booking_extras[idx].quantity%> un.)</div>
  </div>
  <%% } %>
</script>

<script type="text/tpml" id="script_customer_data">
<h3 class="first">Datos del cliente</h3>
        <div class="f-row">
          <div class="one-fourth">Nombre y apellidos</div>
          <div class="three-fourth"><%%=booking.customer_name%> <%%=booking.customer_surname%></div>
        </div>
        <div class="f-row">
          <div class="one-fourth">Teléfono</div>
          <div class="three-fourth"><%%=booking.customer_phone%></div>
        </div>
        <div class="f-row">
          <div class="one-fourth">Correo electrónico</div>
          <div class="three-fourth"><%%=booking.customer_email%></div>
        </div>
</script>

<script type="text/tmpl" id="script_reservation_summary">
  <h3>Detalle de la reserva</h3>
        <div class="f-row">
          <div class="one-fourth">Fecha de entrega</div>
          <div class="three-fourth"><%%=new Date(booking.date_from).toString('d MMMM yyyy')%> <%%=booking.time_from%></div>
        </div>
        <div class="f-row">
          <div class="one-fourth">Lugar de entrega</div>
          <div class="three-fourth"><%%=booking.pickup_place%></div>
        </div>
        <div class="f-row">
          <div class="one-fourth">Fecha de devolución</div>
          <div class="three-fourth"><%%=new Date(booking.date_to).toString('d MMMM yyyy')%> <%%=booking.time_to%></div>
        </div>
        <div class="f-row">
          <div class="one-fourth">Lugar de devolución</div>
          <div class="three-fourth"><%%=booking.return_place%></div>
        </div>
        <div class="f-row">
          <div class="one-fourth">Total producto</div>
          <div class="three-fourth"><%%=new Number(booking.item_cost).toFixed(2)%>€</div>
        </div>
        <%% if (booking.extras_cost > 0) { %>
          <div class="f-row">
            <div class="one-fourth">Total extras</div>
            <div class="three-fourth"><%%=new Number(booking.extras_cost).toFixed(2)%>€</div>
          </div>
        <%% } %>

        <%% if (booking.time_from_cost > 0) { %>
          <div class="f-row">
            <div class="one-fourth">Suplemento hora entrega</div>
            <div class="three-fourth"><%%=new Number(booking.time_from_cost).toFixed(2)%>€</div>
          </div>
        <%% } %>

        <%% if (booking.pickup_place_cost > 0) { %>
          <div class="f-row">
            <div class="one-fourth">Suplemento lugar entrega</div>
            <div class="three-fourth"><%%=new Number(booking.pickup_place_cost).toFixed(2)%>€</div>
          </div>
        <%% } %>

        <%% if (booking.time_to_cost > 0) { %>
          <div class="f-row">
            <div class="one-fourth">Suplemento hora devolución</div>
            <div class="three-fourth"><%%=new Number(booking.time_to_cost).toFixed(2)%>€</div>
          </div>
        <%% } %>

        <%% if (booking.return_place_cost > 0) { %>
          <div class="f-row">
            <div class="one-fourth">Suplemento lugar devolución</div>
            <div class="three-fourth"><%%=new Number(booking.return_place_cost).toFixed(2)%>€</div>
          </div>
        <%% } %>

        <h3>TOTAL: <%%=new Number(booking.total_cost).toFixed(2)%>€</h3>
</script>